
<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  </view>
  <view class="openMenu" bindtap="openMenu" wx:if="{{userInfo.nickName}}">
    <button class="open_menu" >{{userInfo.nickName}} Start Change</button>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>